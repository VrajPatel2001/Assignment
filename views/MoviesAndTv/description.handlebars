    margin:auto;
}
.quick-links ul{
    display: flex;
}
.quick-items
{
    list-style: none;
}
.quick-items a
{
    text-decoration: none;
    padding: 0 25px;
    font-size: 20px;
    color: rgb(255, 255, 255);
    transition: all .25s;
}
@media screen and (min-width:625px)
{
    .quick-links{
        width:600px;
        align-content: center;
        
        margin-top:10px;
         
    }
  
}
@media screen and (max-width:625px)
{
    .quick-links{
        align-content: center;
        margin-left:80px;
        margin-top:-10px;

    }
