    color: rgb(255, 255, 255);
    font-size: 15px;
}

@media screen and (max-width:480px)
{
.outer-footer
    {
        font-size: 10px;
    }
}


.loginbox{
	width: 380px;
	/* height: 420px; */
    height: auto;
	position: relative;
background-color: #fff;
border-radius: 10px;
	color: #fff;
	left:50%;
    margin-top: 250px; 
    margin-bottom: -125px;
	transform: translate(-50%,-50%);
	box-sizing: border-box;
	padding: 70px 30px;
}

.signUp
{
    height: 500px !important;
    margin-bottom: -150px;

}

.login{
	margin: -5px;
    margin-top: -20px;
    margin-bottom:10px;
	padding: 0 0 20px;
	text-align: center;
	font-size: 26px;
	font-weight: bold;

    color: black;


}
.loginbox p{
	margin: 0;
	padding: 0;
    font-size: 22px;
	font-weight: bold;
    color: black;

}
.loginbox input{
	width: 100%;
	margin-bottom: 20px;
	font-size: 14px;
    color: black;
}
.loginbox input[type="password"]
{
	border: none;
	border-bottom: 1px solid rgb(0, 0, 0);
	background: transparent;
	font-size: 14px;

	outline: none;
	height: 40px;
    color: rgb(0, 0, 0);
    
	}
.loginbox input[type="password"]:hover, input[type="email"]:hover{
	font-size: 18px;

}	

.loginbox input[type="text"],input[type="email"]
{
	border: none;
	border-bottom: 1px solid rgb(0, 0, 0);
	background: transparent;
	font-size: 14px;

	outline: none;
	height: 40px;
    color: rgb(0, 0, 0);
    
	}
.loginbox input[type="text"]:hover{
	font-size: 18px;

}	



.loginbox input[type="submit"]{
	border: none;
	outline: none;
	height: 40px;
	background:rgb(87, 195, 228);
	color: #fff;
	font-size: 18px;
    font-weight: bold;
	border-radius: 20px;
}
.loginbox input[type="submit"]:hover{
	cursor: pointer;
	background: rgb(24, 152, 190);
	color: rgb(255, 255, 255);
}
.loginbox a{
	text-decoration: 12px;
	font-size: 15px;
	line-height: 20px;
	color: darkgrey;
	margin-bottom: 10px;
}
.loginbox a:hover{
	color: rgb(24, 152, 190);
}

.error{
    color:red;
    margin-top :-20px;
    margin-bottom: 10px;
}

.content
{
    color: rgb(38, 197, 245);
}
.content1
{
    font-weight: 500;
    font-size:1.3rem;
    margin-bottom: 10px;
}
