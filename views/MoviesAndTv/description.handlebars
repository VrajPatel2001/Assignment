}  


.menu a{
    text-decoration: none;
    
    color:rgb(255, 255, 255);
    padding: 5px 20px;
    border: 1px solid transparent;
    transition: 0.6s ease;
    font-weight: bold;

}

.sign{
    float:right;
    margin-top: 25px;
   
}
@media screen and (max-width:625px)
{
    .sign{
        display:block;
        float:left;
        margin-top:0px;
        margin-bottom: 10px;
       }
}

.menu a:hover{
    background-color: #fff;
    color: #000;
    
    border-radius: 10px;
    }
    
.slider{
    position: relative;
    width: auto;
height:auto;
/* overflow: hidden; */

}
.slider .slide
{
    z-index: 1;
    position: relative;
    width: 100%;
    /* height: 655px; */
    
}

.slider .slide img
{
    
    z-index: 1;
    border-radius: 5px;
    width: 100%;
    height:100%;
    object-fit: cover;
}




.listing { 
    list-style-type: none;
    margin-top: 10px;
}
.listing li{
    display: inline-block;
    margin:auto;
    
}
.feature
{
    margin-top: 10px;
    margin-left:20px;
margin-bottom: 10px;

    border-top:1px solid rgba(177, 173, 173, 0.76);

}
.list
{
    position: relative;
    margin-top: 70px;
    margin-left:20px;
    border-top:1px solid rgba(177, 173, 173, 0.76);

}

.heading{ 
    color: white;
    font-weight: 500;
    font-size:1.3rem;
    margin:20px 10px;

margin-bottom: 0px;
margin-top: 10px;
}

.cs-hidden
{
    overflow: visible !important;
}

  

.box
{
    display:flex;
    flex-direction: column;
    align-items:center;
    box-shadow: 2px 2px 30px rgba(0,0,0,0.2);
    margin:20px 10px;
    border-radius: 10px;
    overflow: hidden;
    width:200px;
    background-color: #ffffff;
   

}

.Img
{
    width:100%;
    height:100%;
}

.Img img
{
    width:100%;
    height:100%;
    object-fit: cover;
}

.Text
{
    color:#3a3a3a;
    margin:0px;

}


@media screen and (max-width:625px)
{
    .list{
        margin-left:40px;

    }
    .feature{
        margin-left:40px;
    }
    .heading{ 
        color: white;
        font-weight: 400;
        font-size:1.1rem;  
    }
    .box
{
   
    overflow: hidden;
    width:170px;
    margin-left:30px;

}

}


.banner
{
    width: auto;
height:auto;
margin-bottom: 10px;
overflow: hidden;
}

.banner img{
    width: 100%;
    height:100%;
    margin-left: 10px;
    margin-right: 10px;
    object-fit: cover;
    border-top:1px solid rgba(177, 173, 173, 0.76);


}

.inner-footer
{
    border-top:1px solid rgba(177, 173, 173, 0.76);
    margin:0;
    padding:0;
}

.social-links
{
    display: flex;
}
.social-links ul
{
    padding:10px;
    display: flex;
    width:300px;
    height:30px;
    margin:auto;

}

.social-items
{
    list-style: none;
}

.social-items a
{
    padding:10px 20px;
    font-size: 40px;
    color: #6cccc6;
    transition: all .25s;

}
.social-items a:hover{
    color:#54a09b;
}

@media screen and (max-width:625px)
{
    .social-links ul{
        width:150px;
        margin-bottom: -20px;
    }
    .social-items a{
        font-size: 20px;
        padding:5px 10px;
    }
}

.quick-links
{
    display: flex;
    width:auto;
    height:70px;
